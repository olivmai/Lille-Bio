{% extends 'layout.html.twig' %}
{% block content %}
<h1>Page de liste des dragons</h1>

<a href="{{ path('home') }}">Retour Ã  la page d'accueil</a>

<table>
	<thead>
		<tr>
			<th>Dragon</th>
			<th>Sexe</th>
			<th>Longueur</th>
			<th>Ecailles</th>
			<th>Crache du feu</th>
			<th>En amour</th>
		</tr>
	</thead>
	<tbody>
		{% for dragon in dragons %}
		<tr>
			<td>{{ dragon.dragon }}</td>
			<td>{{ dragon.sexe }}</td>
			<td>{{ dragon.longueur }}</td>
			<td>{{ dragon.ecailles }}</td>
			<td>
				{% if dragon.cracheFeu == "N" %}
				Non
				{% else %}
				Oui
				{% endif %}
			</td>
			<td>{{ dragon.enAmour }}</td>
		</tr>
	{% endfor %}
	</tbody>
</table>
{% endblock %}